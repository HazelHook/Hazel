{
	"name": "hazelhooks",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"dev:backend": "turbo run dev --filter backend --filter worker",
		"lint": "turbo run lint",
		"format": "pnpm prettier:write && pnpm rome:format:write",
		"prettier:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
		"rome:format:write": "rome format --write ./"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "4.1.1",
		"@turbo/gen": "1.10.15",
		"prettier": "3.0.3",
		"rome": "12.1.3",
		"tsup": "7.2.0",
		"turbo": "1.10.15",
		"typescript": "5.2.2"
	},
	"packageManager": "pnpm@8.6.5",
	"workspaces": ["apps/backend", "packages/db", "apps/api"]
}
