---
import { getCollection } from "astro:content";
import LightLayout from "@/layouts/LightLayout.astro";
import CtaTwo from "@/components/ctas/CtaTwo.astro";
import EntriesOne from "@/components/entries/EntriesOne.astro";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  description="Your site description goes here"
  canonical="https://www.hazelhook.dev"
  openGraph={{
    url: "https://www.hazelhook.dev",
    title: "Open Graph Title",
    description: "Open Graph Description",
    images: [
      {
        url: "https://www.hazelhook.dev/opengraph/social-og.jpg",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "https://www.hazelhook.dev/opengraph/twitter-og.jpg",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://www.hazelhook.dev/opengraph/social-og.jpg" },
      { url: "https://www.hazelhook.dev/opengraph/twitter-og.jpg" },
    ],
    site_name: "YourSitesName",
  }}
  twitter={{
    handle: "@makisuo__",
    site: "makisuo__",
    cardType: "summary_large_image",
  }}
/>
<LightLayout>
  <section class="lg:p-8 overflow-hidden bg-white">
    <div class="px-8 py-24 mx-auto md:px-12 lg:px-16 xl:px-36 2xl:max-w-7xl">
      <div class="space-y-24">
        <div>
          <span class="text-black"> Our blog</span>
          <h2
            class="text-3xl mt-6 tracking-tighter font-light lg:text-4xl text-black">
            All the best news about charts <span class="md:block text-zinc-400"
              >in one quality place</span
            >
          </h2>
        </div>

        <div class="mx-auto text-lg lg:col-span-2 mt-12 lg:mt-0">
          <ol role="list" class="mt-16 flex flex-wrap gap-3">
            {
              tags.map((tag) => (
                <li>
                  <a
                    class="text-zinc-500 text-xs  capitalize"
                    href={`/tags/${tag}`}>
                    {tag}
                  </a>
                </li>
              ))
            }
          </ol>
          <ol role="list" class="grid gap-12 mt-24">
            {
              allPosts
                .slice()
                .map((post) => (
                  <EntriesOne
                    url={"/posts/" + post.slug}
                    title={post.data.title}
                    description={post.data.description}
                    alt={post.data.title}
                    pubDate={post.data.pubDate.toString().slice(0, 10)}
                    author={post.data.author}
                    image={post.data.image.url}
                  />
                ))
            }
          </ol>
        </div>
      </div>
    </div>
  </section>

  <CtaTwo />
</LightLayout>
