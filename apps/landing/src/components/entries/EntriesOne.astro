---
const { title, url, description, pubDate, author, image, authorImage } =
  Astro.props;
---

<li>
  <a
    class="grid grid-cols-1 gap-12 lg:gap-24 md:grid-cols-2 items-center"
    href={url}
    title={title}>
    <div>
      <h3
        class="text-3xl mt-6 tracking-tighter font-light lg:text-4xl text-black">
        {title}
      </h3>
      <p class="text-zinc-500 text-base mt-2">{description}</p>
      <p class="text-zinc-400 text-xs mt-6">
        {author}-
        <span><time datetime={pubDate}>{pubDate}</time></span>
      </p>
    </div>
    <img
      class="aspect-[16/9] w-full rounded-3xl bg-zinc-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]"
      alt={description}
      width="560"
      height="380"
      src={image}
    />
  </a>
</li>
