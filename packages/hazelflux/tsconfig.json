{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "allowJs": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "lib": ["esnext"],
      "types": ["node"],
    },
    "include": ["src/**/*.ts", "src/**/*.node"],
  }
  