NODE daily_res
SQL >

    SELECT
        toStartOfDay(timestamp) AS bucket,
        customer_id,
        source_id,
        status,
        countState() AS count
    FROM response_events
    GROUP BY
        bucket,
        source_id,
        customer_id,
        status

TYPE materialized
DATASOURCE daily_res_mv
ENGINE "AggregatingMergeTree"
ENGINE_PARTITION_KEY "toYYYYMM(bucket)"
ENGINE_SORTING_KEY "bucket, source_id, customer_id, status"
ENGINE_TTL "bucket + toIntervalDay(120)"

