{
	"$schema": "https://json.schemastore.org/tsconfig",
	"include": [".", "./src"],
	"display": "React Library",
	"compilerOptions": {
		"moduleResolution": "node16",
		"module": "node16",
		"outDir": "build",
		"sourceMap": true,
		"incremental": true,                              
		"composite": true,  
		"declaration": true,     
		"declarationMap": true,
		"jsx": "react"
	},
	"exclude": ["node_modules"]
  }